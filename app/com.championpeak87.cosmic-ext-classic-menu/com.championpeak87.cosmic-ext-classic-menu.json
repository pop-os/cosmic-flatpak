{
  "id": "com.championpeak87.cosmic-ext-classic-menu",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "base": "com.system76.Cosmic.BaseApp",
  "base-version": "stable",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "/app/launch-applet.sh",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=system-bus",
    "--socket=session-bus",
    "--share=ipc",
    "--filesystem=xdg-config/cosmic:rw",
    "--talk-name=com.system76.CosmicSettingsDaemon",
    "--system-talk-name=org.freedesktop.Accounts",
    "--system-talk-name=org.freedesktop.login1",
    "--device=dri",
    "--talk-name=org.freedesktop.portal.Desktop",
    "--talk-name=org.freedesktop.portal.Location",
    "--talk-name=org.freedesktop.Flatpak",
    "--talk-name=org.freedesktop.portal.*",
    "--talk-name=org.freedesktop.ScreenSaver",
    "--env=XDG_DATA_DIRS=/run/host/usr/share:/var/lib/flatpak/exports/share:/app/share:${HOME}/.local/share/flatpak/exports/share:${HOME}/.local/share",
    "--filesystem=host:ro",
    "--filesystem=host-os:ro",
    "--filesystem=/var/lib/flatpak/exports/share/applications:ro",
    "--filesystem=/var/lib/flatpak/app:ro",
    "--filesystem=/var/lib/flatpak/exports/share/icons:ro",
    "--filesystem=~/.local/share/flatpak/exports/share/applications:ro",
    "--filesystem=~/.local/share/flatpak/app:ro",
    "--filesystem=~/.local/share/flatpak/exports/share/icons:ro",
    "--filesystem=~/.local/share/applications:ro",
    "--filesystem=~/.local/share/icons:ro",
    "--filesystem=/run/current-system/sw/bin:ro"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/cosmic-ext-classic-menu/cargo"
    }
  },
  "modules": [
    {
      "name": "cosmic-ext-classic-menu",
      "buildsystem": "simple",
      "build-commands": [
        "just build-release --verbose",
        "just prefix=/app install",
        "cp ./flatpak/launch-applet.sh /app",
        "chmod +x /app/launch-applet.sh",
        "cp ./flatpak/com.championpeak87.cosmic-ext-classic-menu.desktop /app/share/applications/com.championpeak87.cosmic-ext-classic-menu.desktop"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/championpeak87/cosmic-ext-classic-menu.git",
          "tag": "0.0.12"
        },
        "./cargo-sources.json"
      ]
    }
  ]
}
