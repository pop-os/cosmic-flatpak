{
  "id": "io.github.cosmic_utils.sysinfo-applet",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "cosmic-ext-applet-sysinfo",
  "finish-args": [
    "--share=network",
    "--filesystem=xdg-config/cosmic:rw",
    "--talk-name=com.system76.CosmicSettingsDaemon",
    "--socket=wayland",
    "--device=dri",
    "--talk-name=org.freedesktop.portal.Desktop",
    "--talk-name=org.freedesktop.portal.Location"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/cosmic-ext-applet-sysinfo/cargo"
    }
  },
  "modules": [
    {
      "name": "cosmic-ext-applet-sysinfo",
      "buildsystem": "simple",
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm0755 ./target/release/cosmic-ext-applet-sysinfo /app/bin/cosmic-ext-applet-sysinfo",
        "install -Dm0644 ./data/io.github.cosmic_utils.sysinfo-applet.desktop -t /app/share/applications/",
        "install -Dm0644 ./data/io.github.cosmic_utils.sysinfo-applet.metainfo.xml -t /app/share/metainfo/",
        "install -Dm0644 ./data/io.github.cosmic_utils.sysinfo-applet-symbolic.svg -t /app/share/icons/hicolor/scalable/apps/"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "./"
        },
        "./cargo-sources.json"
      ]
    }
  ]
}
